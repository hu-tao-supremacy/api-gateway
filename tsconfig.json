{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@gql/*": ["src/gql/hts/*"],
      "@google/*": ["src/gql/google/protobuf/*"],
      "@internal/*": ["src/apis/hts/*"],
      "@mutations/*": ["src/mutations/*"]
    }
  }
}
